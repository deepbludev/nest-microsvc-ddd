{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/orders-svc/src",
  "projectType": "application",
  "targets": {
    "develop": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "docker-compose up"
        ]
      }
    },
    "devbuild": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "docker-compose up --build"
        ]
      }
    },
    "deploy": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "nx build orders-svc --configuration=production --with-deps --skip-nx-cache",
          "docker build -f ./apps/orders-svc/Dockerfile . -t orders-svc --target production"
        ]
      }
    },
    "build": {
      "executor": "@nrwl/node:webpack",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/orders-svc",
        "main": "apps/orders-svc/src/main.ts",
        "tsConfig": "apps/orders-svc/tsconfig.app.json",
        "assets": [
          "apps/orders-svc/src/assets"
        ],
        "generatePackageJson": true
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/orders-svc/src/environments/environment.ts",
              "with": "apps/orders-svc/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "orders-svc:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/orders-svc/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "coverage/apps/orders-svc"
      ],
      "options": {
        "jestConfig": "apps/orders-svc/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
